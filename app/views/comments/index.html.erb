<h1>Comments</h1>
<ul>
  <%= link_to "Add Comment",new_comment_path%>
  <% @comments.each do |comment| %>
  <li>
    <%= link_to comment.title,comment_path(comment.id) %>
    コメント(<%=comment.tasks.count%>)
    いいね(<%=comment.likes.count%>)
    <%= link_to "Edit",edit_comment_path(comment.id) %>
    <%= link_to "Delete",comment_path(comment.id),method: :delete,data:{confirm:"are you sure?"} %>
  </li>
  <%end%>


</ul>
